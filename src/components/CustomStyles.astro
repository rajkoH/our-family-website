---
// Using Nunito for a warm, friendly, and welcoming feel
import '@fontsource-variable/inter';
---

<style is:inline>
  /* Import warm, friendly fonts */
  @import url('https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&family=Crimson+Text:wght@400;600&display=swap');

  :root {
    /* Warm, friendly fonts */
    --aw-font-sans: 'Nunito', 'Inter Variable', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --aw-font-serif: 'Crimson Text', 'Georgia', serif;
    --aw-font-heading: 'Nunito', 'Inter Variable', sans-serif;

    /* Warm, welcoming color palette */
    --aw-color-primary: rgb(208 140 100);      /* Warm terracotta/peach */
    --aw-color-secondary: rgb(222 165 130);    /* Soft coral */
    --aw-color-accent: rgb(180 120 100);       /* Warm brown/rose */

    /* Light, warm text colors */
    --aw-color-text-heading: rgb(80 60 50);    /* Warm dark brown */
    --aw-color-text-default: rgb(90 70 60);    /* Soft brown */
    --aw-color-text-muted: rgb(120 100 90);    /* Muted warm brown */
    --aw-color-bg-page: rgb(254 251 247);      /* Warm off-white/cream */

    --aw-color-bg-page-dark: rgb(40 35 30);

    /* Letter spacing for friendly feel */
    letter-spacing: 0.01em;

    ::selection {
      background-color: rgb(222 165 130 / 30%);
      color: rgb(80 60 50);
    }
  }

  .dark {
    --aw-font-sans: 'Nunito', 'Inter Variable', sans-serif;
    --aw-font-serif: 'Crimson Text', 'Georgia', serif;
    --aw-font-heading: 'Nunito', 'Inter Variable', sans-serif;

    /* Warm dark mode colors */
    --aw-color-primary: rgb(222 165 130);
    --aw-color-secondary: rgb(208 140 100);
    --aw-color-accent: rgb(240 200 170);

    --aw-color-text-heading: rgb(250 245 240);
    --aw-color-text-default: rgb(240 230 220);
    --aw-color-text-muted: rgb(200 185 170);
    --aw-color-bg-page: rgb(40 35 30);

    ::selection {
      background-color: rgb(222 165 130 / 40%);
      color: rgb(250 245 240);
    }
  }

  /* Additional warm styling overrides */
  body {
    font-weight: 400;
    line-height: 1.7;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  /* Smooth, rounded corners for warmth */
  button, .btn {
    border-radius: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  /* Softer shadows */
  .shadow-lg {
    box-shadow: 0 10px 25px -5px rgba(180, 120, 100, 0.15), 0 10px 10px -5px rgba(180, 120, 100, 0.08);
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Warmer selection color */
  ::selection {
    background-color: rgba(222, 165, 130, 0.3);
  }

  /* Softer focus rings */
  *:focus-visible {
    outline: 2px solid rgba(208, 140, 100, 0.5);
    outline-offset: 2px;
  }

  /* Image loading with warm placeholder */
  img {
    background-color: rgba(222, 165, 130, 0.1);
  }
</style>
