---
import favIcon from '~/assets/favicons/favicon.ico';
import favIconSvg from '~/assets/favicons/favicon.svg';
import appleTouchIcon from '~/assets/favicons/apple-touch-icon.png';

// Get the proper paths for favicons
const favIconPath = typeof favIcon === 'string' ? favIcon : favIcon.src;
const favIconSvgPath = favIconSvg.src;
const appleTouchIconPath = appleTouchIcon.src;
---

<link rel="shortcut icon" href={favIconPath} />
<link rel="icon" type="image/svg+xml" href={favIconSvgPath} />
<link rel="mask-icon" href={favIconSvgPath} color="#D08C64" />
<link rel="apple-touch-icon" sizes="180x180" href={appleTouchIconPath} />
